<!DOCTYPE html>
<html>
<head>
  <title>BachelorThesis</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">



  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <!-- Bootstrap 5 JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-xOudTEGcLhOvaJrURm8fBQJkCEdI4pIb+Bq5VSA0Eo4R5jM0vFUcBI7FA5TPfFSF" crossorigin="anonymous"></script>

  <!-- Masonry and ImagesLoaded -->
  <script src="https://imagesloaded.desandro.com/imagesloaded.pkgd.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.2.2/masonry.pkgd.min.js"></script>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <!-- Your custom styles and scripts -->
  <style>
      @keyframes fadeOut {
          from {
              opacity: 1;
          }
          to {
              opacity: 0;
          }
      }

      .fade-out {
          animation: fadeOut 1s forwards; /* 1s duration, forwards to retain the final state */
      }
  </style>
</head>


<body>
<%= render 'layouts/navbar' %>
<%= render 'layouts/messages' %>

<div class="container">
  <%= yield %>
</div>
<%= render 'layouts/footer' %>
</body>
</html>

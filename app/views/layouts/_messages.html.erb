<div class="container" style="margin-top: 15px;">
  <div class="col-xs-10 col-xs-offset-1">
    <% latest_flash = flash.to_hash %>
    <% if latest_flash.any? %>
      <div id="flash" class="alert alert-<%= latest_flash.keys.first %> alert-dismissible fade show" role="alert">
        <%= content_tag :div, latest_flash.values.first if latest_flash.values.first.is_a?(String) %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <script>
      setTimeout(function() {
        var flashElement = document.getElementById('flash');
        if (flashElement) {
          flashElement.classList.add('fade-out');
          setTimeout(function() {
            flashElement.parentNode.removeChild(flashElement);
          }, 1000); // Remove after the animation duration (1s)
        }
      }, 5000);
    </script>
      </div>
    <% end %>
  </div>
</div>